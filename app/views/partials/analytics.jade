extends ../layout.analytics

block content
	header(id="site-header")
		div.grid-container
			div.grid-50
				div.block-content
					h3.text-uppercase Teech.io Learning Analytics
					p.lead Real-time data from our WordsRemember Android demo app.
					p This is a a showcase of how to use Teech.io learning analytics API to build custom dashboards and deliver useful insights on how students are learning.
					p.small <strong>Disclaimer:</strong> we replaced original users names with fake random names
			div.grid-50
				a(href="https://play.google.com/store/apps/details?id=com.teechio.wordsrepeat", target="_blank")
					div.app-banner.block-content

	div(id="site-content")
		div.grid-container
			div(class="chart-container grid-100")
				div.entry
					div(id="users-activity", class="chart", data-users-activity="")
					div(class="widget-title text-center"): h4.text-uppercase daily sessions in the last 30 days
			div.clear
			div(class="chart-container grid-33")
				div.entry
					div(id="top-five-correct", class="chart", data-top-five-correct="")
					div(class="widget-title text-center"): h4.text-uppercase top players
			div(class="chart-container grid-33")
				div.entry
					div(id="top-wrong-correct", class="chart", data-top-five-wrong="")
					div(class="widget-title text-center"): h4.text-uppercase worst players
			div(class="chart-container grid-33")
				div.entry
					div(id="top-wrong-fastest", class="chart", data-top-five-fastest="")
					div(class="widget-title text-center"): h4.text-uppercase fastest players
			div.clear
			div(class="chart-container grid-100")
				div.entry
					div(id="users-hints", class="chart", data-users-hints-avg="")
					div(class="widget-title text-center"): h4.text-uppercase Average Hints per user
		div.grid-container
			div(id="users-list", class="grid-100 grid-parent", data-users-list="")
				div(class="text-center grid-33", data-ng-repeat="user in users")
					a(href="/analytics/showcase/{[ user.slug ]}/detail"): div.entry
						img(data-ng-src="/public/images/user.png")
						p.name {[ user.username ]}
						p.hint.text-uppercase -&nbsp;click to see details&nbsp;-
						